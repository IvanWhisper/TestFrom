            </TransformGroup>
        </Grid.RenderTransform>
        <Calendar x:Name="abc"  HorizontalAlignment="Left" Margin="114,52,0,0" VerticalAlignment="Top" Height="268" Width="359" FontWeight="Black" FontSize="96" FontFamily="Matura MT Script Capitals" RenderTransformOrigin="0.5,0.5">
            <Calendar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="2.042"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Calendar.RenderTransform>
        </Calendar>

    </Grid>
</Window>
